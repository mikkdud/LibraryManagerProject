@model IEnumerable<MvcLibrary.Models.Borrowing>

@{
    ViewData["Title"] = "Borrowings";
}

<h1>Borrowings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">New Borrowing</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>User</th>
            <th>Book</th>
            <th>Inventory #</th>
            <th>Borrowed At</th>
            <th>Returned At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.User!.Login</td>
            <td>@item.Volume!.Book!.Title</td>
            <td>@item.Volume!.InventoryNumber</td>
            <td>@item.BorrowedAt.ToString("yyyy-MM-dd")</td>
            <td>@(item.ReturnedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
