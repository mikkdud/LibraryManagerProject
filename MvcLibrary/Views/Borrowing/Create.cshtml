@{
    ViewData["Title"] = "Create Borrowing";
}

<h1>Create Borrowing</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (ViewData["UserId"] != null)
            {
                <div class="form-group">
                    <label for="UserId" class="control-label">Select User</label>
                    <select class="form-control" id="UserId" name="UserId" asp-items="@(ViewBag.UserId as SelectList)"></select>
                </div>
            }

            <div class="form-group">
                <label for="VolumeId" class="control-label">Select Volume</label>
                <select class="form-control" id="VolumeId" name="VolumeId" asp-items="@(ViewBag.VolumeId as SelectList)"></select>
            </div>

            <div class="form-group">
                <label for="BorrowedAt" class="control-label">Borrowed At</label>
                <input type="date" class="form-control" name="BorrowedAt" required />
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Borrow</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
